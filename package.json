{
  "name": "pick-objects-using-id-index-array",
  "version": "1.0.12",
  "description": "A tiny type safe utility to sort an array of objects by a property using the values array",
  "type": "module",
  "source": "src/index.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test && npm run build && git diff --quiet && git diff --staged --quiet",
    "build": "tsup src/index.ts --format cjs,esm --dts --minify --clean",
    "test": "jest",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "dev": "tsup --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roman86/pick-objects-using-id-index-array.git"
  },
  "keywords": [
    "objects",
    "array",
    "pick",
    "id",
    "map"
  ],
  "author": "Roman Kozodoi",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.5.1"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "glob": "^11.1.0"
  }
}
