{
  "name": "pick-objects-using-id-index-array",
  "version": "1.0.6",
  "description": "A tiny type safe utility to sort an array of objects by a property using the values array",
  "type": "module",
  "source": "src/index.ts",
  "module": "dist/index.esm.js",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle --target web -f modern,esm,cjs",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "dev": "microbundle --target web -f modern,esm,cjs -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Roman86/pick-objects-using-id-index-array"
  },
  "keywords": [
    "objects",
    "array",
    "pick",
    "id",
    "map"
  ],
  "author": "Roman Kozodoi",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1",
    "prettier": "^3.2.5",
    "prettier-plugin-multiline-arrays": "^3.0.4",
    "ts-jest": "^29.1.2"
  }
}
